{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react",
    "plugin:flowtype/recommended"
  ],
  "plugins": ["react", "prettier", "flowtype"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "react/prop-types": 0,
    "consistent-return": 0,
    "new-cap": 0,
    "global-require": 0,
    "no-plusplus": 0,
    "react/no-danger": 0,
    "react/prefer-stateless-function": 0,
    "react/no-unused-state": 0,
    "no-multi-assign": 0,
    "no-param-reassign": 0,
    "no-nested-ternary": 0,
    "no-bitwise": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", "jsx"]
      }
    ],
    "no-unused-expressions": [
      2,
      { "allowShortCircuit": true, "allowTernary": true }
    ],
    "prettier/prettier": "error",
    "max-len": ["error", 80]
  },
  "env": {
    "browser": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./config/webpack-common-config.js"
      }
    }
  }
}
